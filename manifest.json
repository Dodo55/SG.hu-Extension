{
	"name": "SG Fórum+",
	"version": "1.0",
	"description": "Az sg.hu nemhivatalos Chrome bővítménye.",
	"background_page": "background.html",
	"options_page": "options.html",

	"page_action": {
    "default_icon": "img/icon.png",
	"default_title": "SG Fórum+"
	},
	
	"content_scripts": [{
		"matches" : [ "http://www.sg.hu/*", "http://sg.hu/*" ],
		"js" : ["js/jquery.js", "js/content.js", "js/comment_overlay.js", "js/inserttool.js"],
		"css" : ["css/topic.css"],
		"run_at" : "document_end",
		"all_frames": false
		}],
		
	"icons" : { "16" : "img/icon.png", "48": "img/icon.png", "128": "img/icon.png" },

	"permissions": [ "http://www.sg.hu/", "http://sg.hu/", "contextMenus" ]
}
